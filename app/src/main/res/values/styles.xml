<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TagStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/tag_background</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Akbar WorkSpace -->
    <!-- Warning Changing this code absolutely will break the app.-->
    <style name="FilterButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_filter_selector</item>
        <item name="android:textColor">@drawable/button_filter_text_color_selector</item>
        <!-- Akbar WorkSpace End-->


    </style>
</resources>