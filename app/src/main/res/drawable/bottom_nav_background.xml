<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Top border -->
    <item
        android:top="0dp"
        android:height="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/lighter_border" /> <!-- Border color -->
        </shape>
    </item>

    <!-- Background below the border -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/text_primary" /> <!-- Background color -->
        </shape>
    </item>
</layer-list>
